<div>
  {% if sub_heading %}
    <header>
      <p class="hero-subtitle">
        <span class="{{ sub_heading_background }}">
          {{ sub_heading }}
        </span>
      </p>
      {% include '@renovation/headings/heading-highlighted.twig' with {
        html_tag: 'h1',
        heading: heading,
        highlight: heading_background,
      } %}
    </header>
  {% else %}
    {% include '@renovation/headings/heading-highlighted.twig' with {
      html_tag: 'h1',
      heading: heading,
      highlight: heading_background,
    } %}
  {% endif %}

  {% if size != 'sm' %}
    <div class="content">
      <p class="text-white">{{ hero_body|raw }}</p>
    </div>
  {% endif %}

  {# Print row of or single button. #}
  {% if cta_btn %}
    {% if has_button_row %}
      <div class="btn-row">
        {{ cta_btn }}
      </div>
    {% else %}
      {{ cta_btn }}
    {% endif %}
  {% endif %}
</div>
