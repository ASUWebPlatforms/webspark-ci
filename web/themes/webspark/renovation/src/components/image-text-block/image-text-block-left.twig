{#
/**
 * @file
 * Image and Text Block
 *
 * Storybook: https://unity.web.asu.edu/@asu/unity-bootstrap-theme/index.html?path=/story/molecules-content-sections-image-and-text-block-templates--image-left-or-right
 *
 * XD: https://xd.adobe.com/view/56f6cb78-9af5-4b12-b4ce-ef319f71113f-03a5/screen/674ebe9d-bcfd-48c9-a3eb-37efe95f4f4a/
 *
 * Available variables:
 * - class_position: the position of the image overlap
 * - image: the image
 * - background_color: the background color
 * - heading: the heading
 * - sub_heading: the sub heading
 * - content: the content
 * - first_cta: the first cta
 * - second_cta: the second cta
 */
#}

<div class="uds-image-text-block-container">
  <div class="uds-image-text-block-image-container">
    {{ image }}
  </div>

  <div class="uds-image-text-block-text-container  {{ background_color }}">
    {{ heading }}

    {% if sub_heading %}
      <h4>{{ sub_heading }}</h4>
    {% endif %}

    {{ content }}

    <div class="uds-buttons py-1">
      {{ first_cta }}
      {{ second_cta }}
    </div>
  </div>
</div>
