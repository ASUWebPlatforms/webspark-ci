{#
/**
 * @file
 * Template for a banner block.
 */
#}
{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    {% block label %}
      <h2{{ title_attributes }}>{{ label }}</h2>
    {% endblock %}
  {% endif %}
  {{ title_suffix }}

    {% include '@renovation/breadcrumb/breadcrumb.twig' with {
      links: content['#links'],
      bg_color: configuration['color'],
      spacing_top: configuration['spacing_top'],
      spacing_bottom: configuration['spacing_bottom'],
    } %}
</div>
